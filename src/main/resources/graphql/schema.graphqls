interface Node {
    id: ID!
}

type Query {
    recipe(id: ID!): Recipe
}

type Mutation {
    createRecipe: Recipe
    addIngredientToRecipe(recipeId: ID!, ingredient: String!): Recipe
    removeIngredientFromRecipe(recipeId: ID!, ingredient: String!): Recipe
}


type Recipe implements Node {
    id: ID!
    name: String!
    ingredients: [Ingredient!]!
    instructions: [String!]!
}

union Ingredient = FatWrapper | DairyWrapper | ProteinWrapper | GrainWrapper | VegetableWrapper | FruitWrapper | HerbSpiceWrapper | SauceCondimentWrapper | SweetenerWrapper | BakingIngredientWrapper | NutsAndSeedsWrapper


type FatWrapper {
    fat: Fat!
}

type DairyWrapper {
    dairy: Dairy!
}

type SweetenerWrapper {
    sweetener: Sweetener!
}

type ProteinWrapper {
    protein: Protein!
}

type GrainWrapper {
    grain: Grain!
}

type VegetableWrapper {
    vegetable: Vegetable!
}

type FruitWrapper {
    fruit: Fruit!
}

type HerbSpiceWrapper {
    spice: HerbAndSpice!
}

type SauceCondimentWrapper {
    sauce: SauceAndCondiment!
}

type BakingIngredientWrapper {
    bakingIngredient: BakingIngredient!
}

type NutsAndSeedsWrapper {
    nutsAndSeeds: NutsAndSeeds!
}



